<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    xmlns:app="http://schemas.android.com/apk/res/com.example.mytest">
    
    <com.example.widget.Titlebar 
        android:id="@+id/titlebar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        app:left_text="@string/back"
        app:title="@string/one"
        />
    
    <ListView 
        android:id="@+id/lv_test"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/titlebar"
        android:scrollbars="none"
        android:divider="@drawable/listview_divider_inset"
        android:dividerHeight="0.35dp"
        />
    
</RelativeLayout>
