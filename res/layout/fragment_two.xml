<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.mytest"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.widget.Titlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        app:left_text="@string/back"
        app:title="two" />

    <com.example.widget.CountWidget
        android:id="@+id/countView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/ll_deviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_default"
            android:padding="10dp"
            android:text="display info"
            android:textColor="@color/default_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_else"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_button_default"
            android:padding="10dp"
            android:text="else info"
            android:textColor="@color/default_text_color"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_deviceInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_toInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_default"
            android:padding="10dp"
            android:text="device info"
            android:textColor="@color/default_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_senorInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_button_default"
            android:padding="10dp"
            android:text="sensor info"
            android:textColor="@color/default_text_color"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>